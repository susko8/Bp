<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.samuel.altzasuvkaapp.fragments.HwConfigFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/section1_label"
        android:layout_below="@id/section2_label"
        >
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Interval Merania:"
        android:textColor="#000"
        android:padding="10dp"
        android:id="@+id/seeker_label"
        android:layout_below="@id/section1_label"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seeker"
        android:layout_below="@id/seeker_label"
        />


    <TextView
        android:layout_below="@+id/seeker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:background="#FFF"
        android:textColor="#000"
        android:id="@+id/text"
        android:text="dummy text"
        android:layout_margin="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identifikuj zásuvku"
            android:id="@+id/btn_blink"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odošli nastavenia"
            android:id="@+id/btn_send"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
